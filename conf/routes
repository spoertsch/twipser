# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET		/messages					controllers.MessageController.createForm
POST	/message					controllers.MessageController.create
GET		/api/messages				controllers.api.MessageApi.findAll
GET		/api/messages/:author		controllers.api.MessageApi.findAllByAuthor(author)
POST	/api/message				controllers.api.MessageApi.createJson()

GET     /feed                       controllers.MessageController.feed

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)

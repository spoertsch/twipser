# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET		/messages					controllers.TwiipController.createForm
POST	/message					controllers.TwiipController.create

# API
GET		/api/messages				controllers.api.TwiipApi.findAll
GET		/api/messages/:author		controllers.api.TwiipApi.findAllByAuthor(author)
POST	/api/message				controllers.api.TwiipApi.createJson()

GET     /feed                       controllers.TwiipController.feed

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
